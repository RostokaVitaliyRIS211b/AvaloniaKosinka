<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:cc ="clr-namespace:Kosinka.CustomComponents"
		xmlns:cv ="clr-namespace:Kosinka.Converters"
		xmlns:md ="clr-namespace:Kosinka.Core.Model">
  <Design.PreviewWith>
    <Border Padding="20">
      <cc:CardControl/>
    </Border>
  </Design.PreviewWith>
	<Styles.Resources>
		<cv:CardToImageConverter x:Key="imgConv"/>
	</Styles.Resources>
	<Style Selector=":is(cc|CardControl)">
		
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate>
					<Image Height="130" Width="90" Stretch="UniformToFill" x:Name="PART_img" x:DataType="cc:CardControl" Source="{TemplateBinding MyCard, Converter = {StaticResource imgConv}}"/>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</Styles>
